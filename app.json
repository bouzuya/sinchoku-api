{
  "name": "synchoku API",
  "description": "An API server for synchoku",
  "keywords": [
    "bouzuya",
    "synchoku"
  ],
  "website": "https://github.com/bouzuya/synchoku-api",
  "repository": "https://github.com/bouzuya/synchoku-api",
  "env": {
    "SYNCHOKU_TOKEN": {
      "description": "A secret token for authorization.",
      "generator": "secret"
    },
    "SECRET_KEY_BASE": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "3"
    }
  },
  "addons": [
    "heroku-postgresql"
  ]
}
